<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="3dp"
    android:background="#272727">

    <ImageView
        android:id="@+id/img_my_media_primary"
        android:layout_width="140dp"
        android:layout_height="79dp"
        app:layout_constraintBottom_toTopOf="@+id/lbl_my_media_name"
        app:layout_constraintStart_toStartOf="@+id/lbl_my_media_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/placeholder_190x107" />

    <TextView
        android:id="@+id/lbl_my_media_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dummy"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_my_media_primary" />

</androidx.constraintlayout.widget.ConstraintLayout>