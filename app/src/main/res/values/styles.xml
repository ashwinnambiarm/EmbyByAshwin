<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenNoActionBarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black_overlay</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/colorBlack</item>
        <item name="itemBackground">@color/colorBlack</item>
        <item name="itemIconTint">@color/colorWhite</item>
        <item name="itemTextColor">@color/colorWhite</item>
    </style>
</resources>
